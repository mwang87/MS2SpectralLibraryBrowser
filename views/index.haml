%table.table.table-striped.table-condensed.tablesorter
    %thead
        %tr
            %th
            %th Library name
            %th #Spectra
        %tr
            %td
                %a.btn.btn-default.btm-sm.pull-right{:style=>"margin-right: 20px;", :href => "/spectra/aggregateview"} View All Spectra
            %td{:style=>"vertical-align:middle"}= "All Spectra"
            %td{:style=>"vertical-align:middle"}= Spectrum.count
    - @libraries.each do |library|
        %tr
            %td
                %a.btn.btn-default.btm-sm.pull-right{:style=>"margin-right: 20px;", :href => "/spectra/aggregateview?library=#{library.name}"} View Library
            %td{:style=>"vertical-align:middle"}= library.name
            %td{:style=>"vertical-align:middle"}= Spectrum.count(:library => library)

            
